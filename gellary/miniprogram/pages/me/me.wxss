
/* user: unlongin */
.user-card {
    box-shadow: 0rpx 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
    margin: 150rpx 27rpx 0;
    background-color: #FEDBD0;
    padding: 50rpx;
    border-radius: 13rpx;
    font-family: Batang, FangSong;
    display:  grid;
    grid-template-columns: 100rpx 596rpx;
    grid-column-gap: 31rpx;
}
    .user-head {
      width: 100rpx;
      height: 100rpx;
      background: #fff;
      border-radius: 50%;

      grid-column: 1;
      grid-row: 1 / 3;
    }

    .unlogin-text {
        line-height: 48rpx;
        font-family: Batang, FangSong;
        font-size: 34rpx;
        color: #fff;
        font-weight: bold;
        align-self: end;
    }
    .unlogin-tips {
        margin-top: 6rpx;
        line-height: 33rpx;
        font-size: 24rpx;
        color: #8B8B8B;
        align-self: start;
    }